#!/bin/bash
set -e

apache_config=/etc/apache2
misp2_apache_dir="${apache_config}"/ssl
misp2_conf=ssl.conf
misp2_enabled_symlink="${apache_config}/sites-enabled/${misp2_conf}"
misp2_available_config="${apache_config}/sites-available/${misp2_conf}"
case "$1" in
    purge)
        [[ -d "$misp2_apache_dir" ]] && rm -rf "$misp2_apache_dir"
        [[ -L "${misp2_enabled_symlink}" ]] && rm -rf "${misp2_enabled_symlink}"
        [[ -f "${misp2_available_config}" ]] && rm -rf "${misp2_available_config}"
        ;;

    remove | upgrade | disappear | abort-install | abort-upgrade)
        exit 0
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
