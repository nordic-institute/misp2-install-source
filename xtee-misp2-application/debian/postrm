#!/bin/bash
set -e

tomcat_webapps=/var/lib/tomcat8/webapps
misp2_instance="$tomcat_webapps/misp2"
misp2_war_file_pattern="$tomcat_webapps/misp2.war"
case "$1" in
    purge)
        [[ -d "$misp2_instance" ]] && rm -rf "$misp2_instance"
        [ -f "$misp2_war_file_pattern" ] && rm -rf "$misp2_war_file_pattern"
        ;;

    remove | upgrade | disappear | abort-install | abort-upgrade)
        exit 0
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
